{{# partial "titulo" }}
    <title>Mis indicadores</title>
    <!--<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.8/datatables.min.css"/><!--r/bs-3.3.5/jq-2.1.4,-->
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#tablaIndicadores').DataTable();
        } );
    </script>
{{/partial}}

{{# partial "contenido" }}
        <table id="tablaIndicadores" class="display" cellspacing="0" width="100%" >
            <thead>
                <tr>
                    <th>Indicadores</th>
                    <th>Formula</th>
                </tr>
            </thead>
            <tbody>
            {{#indicadores}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{formula}}</td>
                </tr>
            {{/indicadores}}
            </tbody>
        </table>
{{/partial}}

{{# partial "scriptFinal"}}
    <script type="text/javascript">
        // For demo to fit into DataTables site builder...
        $('#tablaIndicadores')
                .removeClass( 'display' )
                .addClass('table table-striped table-bordered');
    </script>
{{/partial}}

