{{# partial "titulo" }}	
	<title>Empresas</title>
{{/partial}}
		
{{# partial "contenido" }}	

<form action="/empresas" >
  <div class="row">
	  <div class="col-md-10">
		  <input type="text" class="form-control" name="filtroNombre">
		</div>
		<div class="col-md-2">
		  <input type="submit" class="form-control btn btn-default">
		</div>
  </div>
</form>

<div class="row">
	<div class="col-md-12">	
	<table class="table table-striped" >
			<td>Nombre</td>
		</hr>
	{{#empresas}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/empresas}}
	</table>
	</div>
</div>

{{/partial}}
				
