{{# partial "titulo" }}
    <title>Metodologias</title>
{{/partial}}

{{# partial "contenido" }}
    <form action="/metodologias" >
        <div class="row">
            <div class="col-md-10">
                <input type="text" class="form-control" placeholder="Nombre de la metodologia" name="filtroNombre">
            </div>
            <div class="col-md-2">
                <input type="submit" class="form-control btn btn-default" value="Buscar">
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-md-12">
            <label>Metodologias:</label>
            <div class="list-group">
                {{#metodologias}}
                <a href="/metodologias/{{id}}/empresas" class="list-group-item">{{nombre}}</a>
                {{/metodologias}}
            </div>
        </div>
    </div>
{{/partial}}
				
{{> layout.hbs }}